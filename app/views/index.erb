<% if authenticated? %>
  <div class="row">
    <div class="col-xs-3 col-sm-3 col-md-4 col-lg-4">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Exercises</h3>
        </div>
        <div class="panel-body">
          <div class="progress">
            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="60" 
            aria-valuemin="0" aria-valuemax="100" 
            style="width:<%= current_user.progress %>%;">
               <span class="progress-text"><%= current_user.progress %>% Complete</span>
           </div>
         </div>
          <div class="list-group" id="challenge-list">
               <% @challenges.each do |challenge| %>
                <a class="list-group-item <%= "active" if @current_challenge.id == challenge.id %>"    href='/challenges/<%= challenge.id %>' ><%= challenge.name %>
                  <% if current_user.completed?(challenge) %>
                <span class="glyphicon glyphicon-ok"></span>
                  <% end %>
               </a>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <nav id = "challenge-top" class="col-xs-9 col-sm-9 col-md-8 col-lg-8">
      <ul class="nav nav-tabs">
        <li class="active" id="challenge"><a href="#">Challenge</a></li>
        <li id="attempts"><a href="#">Your Attemtps</a></li>
     </ul>
   </nav>
   <div id="challenge-area" class="col-xs-9 col-sm-9 col-md-8 col-lg-8">
     <div id = "current-challenge" class="col-xs-9 col-sm-9 col-md-12 col-lg-12">
      <%= erb :_challenge, layout: false %>
     </div>
      <div id = "current-challenge-attempts" class="col-xs-9 col-sm-9 col-md-12 col-lg-12">
        <%= erb :_current_challenge_attempts, layout: false %>
     </div>
   </div>
 


<% else %>
<div class="jumbotron">
  <h1>Welcome to Enumerable Tutor!</h1>
  <p>Increase your enumerable method-fu with this handy
    in browser tutor</p>
</div>
<% end %>
